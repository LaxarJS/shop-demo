{
   "layout": "tools",
   "areas": {
      "activities": [
         {
            "widget": "host-connector-widget",
            "features": {
               "events": {
                  "stream": "eventBusItems"
               },
               "log": {
                  "stream": "logItems"
               },
               "pageInfo": {
                  "resource": "pageInfo"
               },
               "grid": {
                  "resource": "gridSettings"
               }
            }
         }
      ],
      "toolbar": [
         {
            "widget": "developer-toolbar-widget",
            "id": "tabs",
            "features": {
               "grid": {
                  "resource": "gridSettings"
               },
               "tabs": {
                  "parameter": "tab"
               }
            }
         }
      ],
      "tabs.page": [
         {
            "widget": "page-inspector-widget",
            "features": {
               "pageInfo": {
                  "resource": "pageInfo"
               },
               "filter": {
                  "resource": "eventFilter"
               }
            }
         }
      ],
      "tabs.events": [
         {
            "widget": "events-display-widget",
            "features": {
               "events": {
                  "stream": "eventBusItems"
               },
               "filter": {
                  "resource": "eventFilter"
               }
            }
         }
      ],
      "tabs.log": [
         {
            "widget": "log-display-widget",
            "features": {
               "log": {
                  "stream": "logItems"
               }
            }
         }
      ]
   }
}
