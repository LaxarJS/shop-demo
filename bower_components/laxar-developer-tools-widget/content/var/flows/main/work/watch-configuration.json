{
   "watch": {
      "main-reload": {
         "files": [
            "application/flow/flow.json",
            "application/pages/tools.json",
            "application/layouts/tools/default.theme/css/tools.css",
            "application/layouts/tools/default.theme/tools.html",
            "includes/widgets/developer-toolbar-widget/widget.json",
            "includes/widgets/developer-toolbar-widget/default.theme/developer-toolbar-widget.html",
            "includes/widgets/developer-toolbar-widget/default.theme/css/developer-toolbar-widget.css",
            "includes/widgets/developer-toolbar-widget/developer-toolbar-widget.js",
            "includes/widgets/events-display-widget/widget.json",
            "includes/widgets/events-display-widget/default.theme/events-display-widget.html",
            "includes/widgets/events-display-widget/default.theme/css/events-display-widget.css",
            "includes/widgets/events-display-widget/events-display-widget.js",
            "includes/widgets/host-connector-widget/widget.json",
            "includes/widgets/host-connector-widget/default.theme/host-connector-widget.html",
            "includes/widgets/host-connector-widget/default.theme/css/host-connector-widget.css",
            "includes/widgets/host-connector-widget/host-connector-widget.js",
            "includes/widgets/log-display-widget/widget.json",
            "includes/widgets/log-display-widget/default.theme/log-display-widget.html",
            "includes/widgets/log-display-widget/default.theme/css/log-display-widget.css",
            "includes/widgets/log-display-widget/log-display-widget.js",
            "includes/widgets/page-inspector-widget/widget.json",
            "includes/widgets/page-inspector-widget/default.theme/page-inspector-widget.html",
            "includes/widgets/page-inspector-widget/default.theme/css/page-inspector-widget.css",
            "includes/widgets/page-inspector-widget/page-inspector-widget.js"
         ],
         "event": [
            "changed"
         ]
      },
      "main-update": {
         "files": [
            "application/flow/*",
            "application/pages/*",
            "application/layouts/tools/default.theme/css/*",
            "application/layouts/tools/default.theme/*",
            "includes/widgets/developer-toolbar-widget/*",
            "includes/widgets/developer-toolbar-widget/default.theme/*",
            "includes/widgets/developer-toolbar-widget/default.theme/css/*",
            "includes/widgets/events-display-widget/*",
            "includes/widgets/events-display-widget/default.theme/*",
            "includes/widgets/events-display-widget/default.theme/css/*",
            "includes/widgets/host-connector-widget/*",
            "includes/widgets/host-connector-widget/default.theme/*",
            "includes/widgets/host-connector-widget/default.theme/css/*",
            "includes/widgets/log-display-widget/*",
            "includes/widgets/log-display-widget/default.theme/*",
            "includes/widgets/log-display-widget/default.theme/css/*",
            "includes/widgets/page-inspector-widget/*",
            "includes/widgets/page-inspector-widget/default.theme/*",
            "includes/widgets/page-inspector-widget/default.theme/css/*"
         ],
         "event": [
            "changed"
         ],
         "tasks": [
            "laxar-resources:main"
         ],
         "options": {
            "event": [
               "added",
               "deleted"
            ],
            "spawn": false
         }
      },
      "main-rebuild": {
         "files": [
            "application/flow/flow.json",
            "application/pages/tools.json"
         ],
         "tasks": [
            "laxar-build:main"
         ],
         "options": {
            "spawn": false
         }
      },
      "main-merge-require-config": {
         "files": [
            "includes/widgets/developer-toolbar-widget/require_config.js",
            "includes/widgets/events-display-widget/require_config.js",
            "includes/widgets/host-connector-widget/require_config.js",
            "includes/widgets/log-display-widget/require_config.js",
            "includes/widgets/page-inspector-widget/require_config.js",
            "require_config.js"
         ],
         "event": [
            "changed"
         ],
         "tasks": [
            "laxar-merge-require-config:main"
         ],
         "options": {
            "spawn": false
         }
      }
   }
}
