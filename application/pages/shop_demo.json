{
   "layout": "application",

   "areas": {
      "activities": [
         {
            "widget": "shop-demo/order-activity",
            "features": {
               "cart": {
                  "resource": "cart"
               },
               "order":{
                  "action": "order",
                  "target": "finishOrder"
               },
               "database":{
                  "pouchDb": {
                     "dbId": "orders"
                  }
               }
            }
         }
      ],

      "searchBox": [
         {
            "widget": "shop-demo/article-search-box-widget",
            "features": {
               "resource": "articles",
               "database":{
                  "pouchDb": {
                     "dbId": "articles"
                  }
               }
            }
         }
      ],

      "content1a": [
         {
            "widget": "shop-demo/article-browser-widget",
            "features": {
               "display": {
                  "resource": "articles"
               },
               "select": {
                  "resource": "selectedArticle"
               }
            }
         }
      ],
      "content1b": [
         {
            "widget": "shop-demo/article-teaser-widget",
            "features": {
               "display": {
                  "resource": "selectedArticle"
               },
               "button": {
                  "htmlLabel": "<i class='fa fa-shopping-cart'></i> Add to Cart",
                  "action": "addArticle"
               }
            }
         }
      ],
      "content1c": [
         {
            "widget": "shop-demo/shopping-cart-widget",
            "features": {
               "cart": {
                  "resource": "cart",
                  "order": {
                     "action": "order",
                     "button": {
                        "htmlLabel": "<i class='fa fa-send'></i> Order"
                     }
                  }
               },
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addArticle" ]
               }
            }
         }
      ],

      "footer": [
      ]
   }
}
