{
   "name": "ArticleSearchBoxWidget",
   "description": "The ArticleSearchBoxWidget lets the user search for articles.",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "articles", "filteredArticles" ],
      "properties": {

         "articles": {
            "type": "object",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "ID of the resource for the unfiltered list of articles to subscribe to.",
                  "format": "topic"
               }
            }
         },

         "filteredArticles": {
            "type": "object",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "ID of the resource under which the filtered list of articles is published.",
                  "format": "topic"
               }
            }
         }

      }
   }
}
