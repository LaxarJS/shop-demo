{
   "name": "ArticleTeaserWidget",
   "description": "The ArticleTeaserWidget displays the details of an article.",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "article" ],
      "properties": {

         "article": {
            "type": "object",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "Name of the data resource representing an article.",
                  "format": "topic"
               }
            }
         },

         "confirmation": {
            "type": "object",
            "required": [ "action" ],
            "properties": {
               "action": {
                  "type": "string",
                  "description": "Name of the action to request to add the selected article to cart",
                  "format": "topic"
               }
            }
         }

      }
   }
}
